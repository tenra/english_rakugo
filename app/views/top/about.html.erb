<%= form_for @top, :url => top_confirm_path do |f| %>
  <div class="inquiry-header">
    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> お問い合わせ
  </div>
  
  <% if @top.errors.any? %>
   <div class="alert alert=danger" role="alert">
     <strong>入力内容にエラーがあります</strong>
     <ul>
       <% @top.errors.each do |attr, msg| %>
        <li><%= msg %></li>
        <% end %>
     </ul>
   </div>
  <% end %>
  
<div class='row'>
    <div class='col-sm-offset-3 col-sm-6'>
        <table class="table">
          <tr>
            <th>名前<span class="text-danger">(必須)</span></th>
            <td><%= f.text_field :name, placeholder: 'Name', class: "form-control text-code" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">(必須)</span></th>
            <td><%= f.text_field :email, placeholder: 'Email Address', class: "form-control text-code" %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, placeholder: 'Message', class: "form-control area-code"  %></td>
          </tr>
        </table>
      <%= f.submit '確認', class: 'btn btn-primary' %>
     <% end %>
    </div>
</div>
<a name="inquiry" id="inquiry"><%= link_to "Back", :back %></a>

