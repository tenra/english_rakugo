<div id="title">
   <h1>English Rakugo</h1>
</div>
<div class="title-text">
   <%= t '.text_text_text_text_text_text_text_text_text_text' %>
</div>

<% @events.each do |event| %>

<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <div class="hvr-glow">
    <div class="wrap" data-url="<%= show_event_path(event) %>">
      <div class="col-md-7">
       <%= image_tag event.image.thumb.url if event.image.thumb.present? %>
      </div>
        <div class="col-md-5">
            <h3><%= link_to event.title, show_event_path(event) %></h3>
            <h4>Subheading</h4>
            <p><%= simple_format event.text %></p>
            <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
          <div align="right" class="user_avatars">
            ã€€<% event.booking_users.order('updated_at desc').limit(40).each do |user| %>
            <div>
              <span>
                <% if user.profile && user.profile.avatar? %>
                  <%= image_tag user.profile.avatar , :alt => user.name , :class => "img-circle_h"%>
                <% else %>
                  <%= image_tag 'no-avatar.png', width: 200, :class => "img-circle_h"%>
                <% end %>
              </span>
                <p class="arrow_box"><%= user.name %></p>
            </div>
                <% end %>
                  &nbsp;
                <span class="badge"><%= event.booking_users.count %></span>&nbsp;<%= t '.participants' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          </div>
    </div>
  </div>
<script>
    jQuery('.wrap').click(function() {
        location.href = jQuery(this).attr('data-url');
    });
</script>

  <hr>
<% end %>