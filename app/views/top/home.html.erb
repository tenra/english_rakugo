<h1>English Rakugo</h1>

<% @events.each do |event| %>

<div class="panel panel-default">
  <div class="panel-heading">
     <div class="text-center">
       <%= link_to event.title, event_path(event) %>
     </div>
  </div>
    
  <div class="panel-body">
    <div class="image_left"><%= image_tag event.image.thumb.url if event.image.thumb.present? %></div>
    <p><%= simple_format event.text %></p>
    <div class="clearfix"></div>
    <hr>
    <div align="right">joining <%= event.booking_users.count %> people now!</div>
  </div>
</div>

<% end %>