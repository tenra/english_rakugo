<%  @page_title = "My page" %>

<h1><span style="color:#fff;"><%= @page_title %></span></h1>

<div class="event-back">
  <div class='row'>
    <div class='col-sm-offset-3 col-sm-6'>
   ã€€  <table class="table">
        <tr>
          <div class="text-center">
            <% if !current_user.profile.nil? && current_user.profile.avatar? %>
              <%= image_tag(current_user.profile.avatar.thumb.url, :class => "img-circle") %>
            <% else %>
              <%= image_tag 'no-avatar.png', width: 200, :class => "img-circle"%>
            <% end %>
          </div>
        </tr>
      <div align="right"><%= link_to 'Edit Profile Image', new_profile_path %></div>
      <div align="right"><%= link_to 'Edit User', edit_user_registration_path %></div>
        
        <tr>
          <th><%= t '.User_name' %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th><%= t '.Email_address' %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr><th><td></td></th></tr> 
      </table>
          <span style="font-weight:bold"><%= t '.My_events' %></span><br />
            <% current_user.booking_events.each do |event| %>
              <% if (event.date.present? && event.time.present?) %>
                <span style="margin-left:20px"><%= I18n.l event.date, format: :full_date %></span>
                 ,&nbsp;<%= event.time.strftime("%H:%M") %>~
              <% end %><br />
              <div class="me-event">
                <% if event.image? %>
                    <%= image_tag event.image.thumb.url, :class => "e-img-mini" %>
                <% else %>
                    <%= image_tag 'noimage.gif', :class => "e-img-mini" %>
                <% end %>
                <%= link_to event.title, show_event_path(event) %>
              </div>
              <hr>
            <% end %>
        
    </div>
  </div>
</div>
