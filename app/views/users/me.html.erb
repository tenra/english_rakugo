<div class='row'>
  <div class='col-sm-offset-3 col-sm-6'>
   　  <table class="table">
       　<tr>
       　     <th>
                  <% if !current_user.profile.nil? && current_user.profile.avatar? %>
                  <%= image_tag current_user.profile.avatar.thumb.url %>
                  <% else %>
                  <%= image_tag 'noimage.gif' %>
                  <% end %>
               </th>
            </tr>
        <tr>
          <th>user name</th>
            <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>my event</th>
            <td>
              <% current_user.booking_events.each do |event| %>
                <div><%= link_to event.title, event_path(event) %></div>
              <% end %>
            </td>
        </tr>
　　　　
　　  </table>

  </div>
</div>
