      </tr>
      <tr>
        <th><%= t '.Email_address' %></th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th><%= t '.My_events' %></th>
        <td>
          <% current_user.booking_events.each do |event| %>
            <div><%= link_to event.title, show_event_path(event) %></div>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

