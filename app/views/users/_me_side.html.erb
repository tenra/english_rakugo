  <aside class="me-aside">
      <div class="my_profiles">
          <% if current_user.organizer? %>
             <%= t '.Organizer_profile' %>
          <% else %>
             <%= t '.My_profile' %>
          <% end %>
      </div>
      <table class="table">
            <div class="text-center">
              <% if current_user.avatar? %>
                <%= image_tag(current_user.avatar.thumb.url, :class => "mypage_img") %>
              <% else %>
                <%= image_tag 'no-avatar.png', width: 200, :class => "mypage_img"%>
              <% end %>
            </div>
        <div align="right"><%= link_to 'Edit', edit_user_registration_path %></div>
        
          <tr>
            <% if current_user.organizer? %>
              <th><%= t '.Organizer_name' %></th>
            <% else %>
              <th><%= t '.User_name' %></th>
            <% end %>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th><%= t '.Email_address' %></th>
            <td><%= current_user.email %></td>
          </tr>
       <% if current_user.avatar.present? %>
          <tr>
            <th><%= t '.Profile-Image_status' %></th>
            <td>
              <% if current_user.private %>
              <%# if current_user.profile.present? && current_user.profile.private %>
                <%= t '.Public' %>
              <% else %>
                <%= t '.Private' %>
              <% end %>
            </td>
          </tr>
       <% end %>
       <% if current_user.organizer? %>
          <tr>
            <th><%= t '.Sentence' %></th>
            <td><%= current_user.sentence %></td>
          </tr>
       <% end %>
          <tr><th><td></td></th></tr>
      </table>
  </aside>