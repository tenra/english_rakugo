<div class="organizer-side">
         <div class="my_profiles"><%= t '.Organizer_Profile' %></div>
      <table class="table">
            <div class="text-center">
              <% if !current_user.introduction.nil? && current_user.introduction.photo? %>
                <%= image_tag(current_user.introduction.photo.thumb.url, :class => "organizer_photo") %>
              <% else %>
                <%= image_tag 'no-avatar.png', width: 200, :class => "organizer_photo"%>
              <% end %>
            </div>
            <div><%= link_to "edit", new_introduction_path %></div>
            <tr>
            　<th>Name</th>
            　<td><%= current_user.introduction.name %></td>
          　</tr>
          　<tr>
            　<th>Introduction</th>
            　<td><%= current_user.introduction.sentence %></td>
        　　  </tr>
            
      </table>
</div>