<% @page_title = "Confirm" %>
<h1><%= @page_title %></h1>

<div class='row'>
   <div class='col-md-6 col-md-offset-3'>
      <%= form_for @event do |f| %>
        <table class="table">
           <tr>
             <th>Title</th>
               <td>
                 <%= f.hidden_field :title %>
                 <%= @event.title %>  
               </td>
            </tr>
            <tr>
               <th>Text</th>
               <td>
                  <%= f.hidden_field :text %>
                  <%= simple_format(@event.text) %>
               </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                  <%= f.hidden_field :address %>
                  <%= @event.address %>    
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>
                  <%= f.hidden_field :description %>    
                  <%= @event.description %>
                </td>
            </tr>
        </table>                

        <div class="actions">
          <%= f.submit 'Back', name: 'back' %>
        </div>
        <div>
          <%= f.submit 'Create', class: "btn btn-large btn-primary" %>
        </div>
      <% end %>
   </div>
</div>