<%  @page_title = "Event" %>

<h1><%= @event.title %></h1>

<div class='row'>
    <div class="container">
      <table class="table">
        <tr>
          <th>
            <% if @event.image? %>
                <div class="text-center">
                  <%= image_tag @event.image.thumb.url %>
                </div>
            <% else %>
              <%= image_tag 'noimage.gif' %>
            <% end %>
          </th>
        </tr>
          <tr>
            <th><%= simple_format @event.text %></th>
          </tr>
          <tr>
            <th>joining <%= @event.booking_users.count %> people now!
            <%= render 'events/booking_form', event: @event %></th>
          </tr>
      </table>
    </div>
        <p><%= link_to "Edit", edit_event_path(@event) %></p>
        <p><%= link_to "Destroy", @event, method: :delete, data: { confirm: 'Are you sureï¼Ÿ' } %></p>
</div>