<span id="booking_form-<%= event.id %>">
    <% if (@event.date && @event.time) <= (Date.today && Time.now) %>
      <button type="button" class="btn btn-danger">closed</button>
    <% elsif %>
        <%= render 'events/unbooking', event: event if event.booking?(current_user) %>
    <% else %>
        <%= render 'events/booking', event: event %>
    <% end %>
</span>