<% @page_title = 'Users' %>

 <div class="row">

    <%= render 'admin/sidemenu' %>

   <div class="col-md-10">
       <center><h1><%= @page_title %></h1></center>
      
     <% if @users.present? %>
        <table class="table table-striped">
          <tr>
             <th>id</th>
             <th>name</th>
             <th>email</th>
             <th>#</th>
          </tr>

        <% @users.each do |user| %>
          <tr>
             <td><%= user.id %></td>
             <td><%= link_to user.name, users_me_path(user) %></td>
             <td><%= user.email %></td>
             <td>
               <%= link_to "delete", "#", method: :delete, data: { confirm: 'Are you sure?' } %>
             </td>
          </tr>
        <% end %>

        </table>
     <% else %>
        <p>no user</p>
     <% end %>
   </div>
 </div>