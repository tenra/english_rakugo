<% @page_title = 'events' %>

 <div class="row">

    <%= render 'admin/sidemenu' %>

   <div class="col-md-10">
       <center><h1><%= @page_title %></h1></center>
      
     <% if @events.present? %>
        <table class="table">
          <tr>
             <th>id</th>
             <th>title</th>
             <th>#</th>
          </tr>

        <% @events.each do |event| %>
          <tr>
             <td><%= event.id %></td>
             <td><%= event.title %></td>
             <td>
               <%= link_to "edit", "#" %> |
               <%= link_to "delete", "#", method: :delete, data: { confirm: 'Are you sure?' } %>
             </td>
          </tr>
        <% end %>

        </table>
     <% else %>
        <p>no event</p>
     <% end %>
   </div>
 </div>