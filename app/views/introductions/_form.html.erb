<div align="center">
   <% if @introduction.photo? %>
      <%= image_tag @introduction.photo.thumb.url, class: "profile-present-avatar img-responsive" %>
   <% else %>
      <%= image_tag 'no-avatar.png', width: 200, :class => "profile-present-avatar img-responsive" %>
   <% end %>
   <%= form.hidden_field :photo_cache %>
  <img id="img_prev" width=200 height=200 src="#" class="img-thumbnail hidden"/>
      <%= form.file_field :photo, :id => 'post_post_img' %>
</div>            
<div class="form-group">
   <%= form.label :name %><br />
   <%= form.text_field :name, class: "form-control", placeholder: "OrganizerName" %>
</div>
<div class="form-group">
   <%= form.label :sentence %><br />
   <%= form.text_area :sentence, class: "form-control", placeholder: "Introduction", rows: 10, cols: 45 %>
</div>