<div class="form-group">
  <%= form_for(@timetable) do |f| %>
  ã€€<input type="hidden" name="event_id" value="<%= @timetable.event_id %>">
     <% if @timetable.errors.present? %>
       <div class="alert alert-danger">
         <%= alert %>
         <ul>
             <% @timetable.errors.full_messages.each do |full_message| %>
             <li>
                 <%= full_message %>
             </li>
            <% end %>
         </ul>
       </div>
     <% end %>
 
    <div class="form-inline">
        <div class="form-group">
         <%= f.label :Time %><br />
         <%= f.text_field :time, style: "width:90px;", class: "form-control", placeholder: "00:00" %>
        </div>
        <div class="form-group">
         <%= f.label :Description %><br />
         <%= f.text_field :description, style: "width:390px;", class: "form-control", placeholder: "less than 50 characters" %>
        </div>
        <div class="form-group"><br />
          <%= f.submit 'Create', class: "btn btn-timetable" %>
        </div>
    </div>
   <% end %>
</div>