<%  @page_title = "Sign in" %>

<center><h1><%= @page_title %></h1></center>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <% if @user.errors.present? %>
      <div class="alert alert-danger"><%= devise_error_messages! %></div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

        <%= link_to user_twitter_omniauth_authorize_path do%>
        <a class="link-social">
           <div class="btn btn-lg btn-social btn-twitter">
                <i class="fa fa-twitter"></i>Sign in with Twitter
           </div>
        </a>
        <% end %>
      
        <%= link_to user_facebook_omniauth_authorize_path do%>
           <div class="btn btn-lg btn-social btn-facebook">
                <i class="fa fa-facebook"></i>Sign in with Facebook
           </div>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <div class="actions">
        <%= f.submit "Sign in" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
