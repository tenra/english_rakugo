<%  @page_title = "Sign in" %>

    <script src="https://use.typekit.net/ayg4pcz.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <% if @user.errors.present? %>
      　<div class="alert alert-danger"><%= devise_error_messages! %></div>
  　　<% end %>
    
<div class="container">
    <h1 class="welcome text-center">Welcome to <br><span style="font-weight:bold">English Rakugo</span></h1>
        <div class="card card-container">
        <h1 class='login_title text-center'>Sign in</h1>
        <hr>

            <form class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <p class="input_title">Email</p>
                <%= f.email_field :email, autofocus: true, class: "login_box", placeholder: "user01@example.com" %>
                <p class="input_title">Password</p>
                <%= f.password_field :password, autofocus: true, class: "login_box", placeholder: "*********︎" %>
                <div id="remember" class="checkbox">
                    <label>
                        
                    </label>
                </div>
                <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
            </form><!-- /form -->
        </div><!-- /card-container -->
    <% end %>
        
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
        <%= link_to user_twitter_omniauth_authorize_path, { :class => "link-social" } do %>
           <div class="btn btn-lg btn-social btn-twitter">
                <i class="fa fa-twitter"></i>Sign in with Twitter
           </div>
        <% end %>
        <%= link_to user_facebook_omniauth_authorize_path do %>
           <div class="btn btn-lg btn-social btn-facebook">
                <i class="fa fa-facebook"></i>Sign in with Facebook
           </div><br />
        <% end %>
    </div>
   <span style="text-align:left; font-size: 1.2em;"><%= render "devise/shared/links" %></span>
  </div>
</div><!-- /container -->